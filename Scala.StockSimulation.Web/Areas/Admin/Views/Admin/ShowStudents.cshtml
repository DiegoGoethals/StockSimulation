@model Scala.StockSimulation.Web.ViewModels.ShowStudentsViewModel

<link rel="stylesheet" href="/css/Shared.css" />
<partial name="_LogoutButton" />
<h2>Alle Leerlingen</h2>
<table>
    <thead>
        <tr>
            <th scope="col">Leerling</th>
            <th scope="col">Info</th>
            <th scope="col">Actie</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model.Students)
        {
            <tr>
                <td>@student.Name</td>

                <td><a asp-action="ShowAllOrders" asp-route-applicationUserId="@student.Id" class="btn btn-primary">Info</a></td>
                <td><a asp-action="ResetStudent" asp-route-applicationUserId="@student.Id" class="btn btn-danger">Reset</a></td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="admin" asp-action="Index" class="btn btn-secondary">Terug</a>
